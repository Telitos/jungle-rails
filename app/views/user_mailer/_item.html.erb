<% if product = Product.find_by(id: product_id) %>
  <% item_total = product.price * quantity %>
  <% @order_total += item_total %>

  <tr>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= number_to_currency(product.price) %>
    </td>
    <td>
      <%= quantity %>
    </td>
      <td>
      <%= number_to_currency(item_total) %>
    </td>
  </tr>
<% end %>
