

<section class="order-show">

  <header class="page-header">
    <h1>Order #<%= @order.id%> ordered by: <%= @order.email%> </h1>
  </header>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Products</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
      <% @order_total = 0 %>
          <% @line_items.each do |line_item| %>
          <%= render 'item', product_id: line_item.product_id, quantity: line_item.quantity %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
          <%= @order_total %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

</section>





