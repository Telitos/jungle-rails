<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <% if current_user %>
    <div>
    <%= form_for [@product, @comment] do |f| %>
    <%= f.text_area :description %>
    <%= f.select :rating, (1..5) %>
    <br>
    <%= f.submit %>
    <% end %>
    </div>
    <% end %>
    <br>
   <div>
    <% if not @product.comments.length == 0 %>
      <%@product.comments.each do |comment|%>
        <p><strong> <%= User.find(comment.user_id).first_name %></strong></p>
       <p><%= comment.description %></p>
       <p><%= comment.rating %></p>
        <% if current_user == User.find(comment.user_id) %>
        <%= link_to "/products/#{@product.id}/comments/#{comment.id}", class: 'btn btn-xs btn-danger', method: :delete do %>
        Delete
        <% end %>
        <% end %>
      <% end %>
    <% end %>
   </div>
  </article>

</section>
