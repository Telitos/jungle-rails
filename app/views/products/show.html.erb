<section class="products-show">
  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>
  <article class="product-detail">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= number_to_currency(@product.price) %></dd>
        </dl>
      </div>
    </div>
    </article>
</section>

<% if current_user %>
<%= render 'review_form'%>

<section class="jumbotron text-center reviews-header">
  <h1>Users' Reviews</h1>
  <p>Check out what other people thought about this product!</p>
</section>

<% end %>
  <section id="user-reviews" class = "container">
    <% if @product.comments.length == 0 %>
    <strong> There are currently no reviews for this product. Be the first one to leave a review! </strong>
    <% else %>
      <% @product.comments.reverse_each do |comment| %>
        <%= render 'comment', comment: comment %>
    <% end %>
  <% end %>
</section>